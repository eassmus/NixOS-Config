@define-color main-color #82aee8; 
@define-color green-color #a6e3a1;
@define-color sound-color #1f74a8;
@define-color pink-color #e9a6fd;
@define-color warning-color #f3a611;
@define-color red-color #f34646;

* {
  border: none;
  border-radius: 0;
  font-family:
    Jetbrains Mono Nerd Font,
    monospace;
  font-weight: bold;
  font-size: 22px;
  min-height: 43px;
}

window#waybar {
  background: rgba(21, 18, 27, 0);
  color: #cdd6f4;
}

tooltip {
  background: #1e1e2e;
  color: @main-color;
  border-radius: 20px;
  border-width: 2px;
  border-style: solid;
  border-color: #11111b;
}

#language,
#custom-updates,
#custom-integratedgpu,
#custom-gpu,
#custom-caffeine,
#custom-weather,
#custom-brightness,
#custom-kbbacklight,
#window,
#clock,
#battery,
#pulseaudio,
#network,
#workspaces,
#tray,
#cpu,
#memory,
#backlight {
  background: #1e1e2e;
  padding: 0px 20px;
  margin: 0px 0px;
  margin-top: 20px;
  margin-bottom: 0px;
  color: @main-color;
}

#custom-brightness {
  margin-left: 10px;
  border-radius: 20px 0px 0px 20px;
}

#custom-kbbacklight {
  margin-right: 10px;
  border-radius: 0px 20px 20px 0px;
}

#window {
  border-radius: 20px;
  margin-left: 60px;
  margin-right: 60px;
}

#clock {
  color: @pink-color;
  border-radius: 20px 20px 20px 20px;
  margin-left: 10px;
  margin-right: 10px;
}

#network {
  color: @red-color;
  border-left: 0px;
  border-right: 0px;
  border-radius: 20px 20px 20px 20px;
  margin-left: 10px;
  margin-right: 10px;
}

#network.wifi {
  color: @green-color;
}

#network.ethernet {
  color: @green-color;
}

#cpu {
  border-radius: 20px 0px 0px 20px;
  border-left: 0px;
  border-right: 0px;
  margin-left: 10px;
}

#memory {
  border-radius: 0px 20px 20px 0px;
  margin-right: 10px;
}

#custom-gpu {
  border-radius: 0px 20px 20px 0px;
  margin-right: 10px;
}

#pulseaudio {
  color: @pink-color;
  border-radius: 20px 0px 0px 20px;
  margin-left: 10px;
}

#pulseaudio.microphone {
  border-radius: 0px 20px 20px 0px;
  margin-left: 0px;
  margin-right: 20px;
  padding-right: 20px;
}

#battery {
  color: @green-color;
  border-radius: 20px 20px 20px 20px;
  margin-right: 10px;
  border-left: 0px;
  margin-left: 20px;
}

#battery.warning {
  color: @warning-color;
}

#battery.critical {
  color: @red-color;
}

#battery.charging {
  color: @green-color;
}

#custom-weather {
  border-radius: 0px 20px 20px 0px;
  border-right: 0px;
  margin-left: 0px;
}
